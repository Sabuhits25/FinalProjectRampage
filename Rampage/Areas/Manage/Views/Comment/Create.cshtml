@using Rampage.BLL.DTO_s.CommentDTO_s
@using Rampage.Core.Entities
@model CreateCommentDTO

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Create Comment</h1>
    <div class="col-md-12 text-center">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Comment Details</h6>
        </div>
        <div style="color: black;" class="card-body">
            <form asp-action="Create" asp-controller="Comment" enctype="multipart/form-data" method="POST">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name">Product Name</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Enter product name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Language">Language</label>
                        <select asp-for="Language" class="form-control">
                            <option value="Az">Azerbaijani</option>
                            <option value="En">English</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Star">Star</label>
                            <input asp-for="Star" class="form-control" placeholder="Enter product star">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Message">Message</label>
                            <textarea id="Message" asp-for="Message" class="form-control" rows="5">@Model.Message</textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Author">Author</label>
                            <input asp-for="Author" type="text" class="form-control" placeholder="Enter author name">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Image">Image</label>
                            <input asp-for="Image" type="file" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Create Comment</button>
                    <a href="@Url.Action("Table", "Comment")" class="btn btn-warning">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
