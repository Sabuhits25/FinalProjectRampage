@using Rampage.BLL.DTO_s.ColorDTO_s
@model UpdateColorDTO

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Update Color</h1>
    <div class="col-md-12 text-center">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Color Details</h6>
        </div>
        <div style="color: black;" class="card-body">
            <form asp-action="Update" asp-controller="Color" method="POST">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PageIndex" />

                <div class="card-header mb-4" style="margin-left: -20px; width: 103.3%">
                    <h6 class="m-0 font-weight-bold text-primary">Color Translations</h6>
                </div>

                <div id="translations">
                    @for (int i = 0; i < Model.Translations.Count; i++)
                    {
                        <div class="translation-item">
                            <h5>Translation @(i + 1) (@Model.Translations[i].Language)</h5>
                            <input type="hidden" name="Translations[@i].Id" value="@Model.Translations[i].Id" />
                            <input type="hidden" name="Translations[@i].ColorId" value="@Model.Translations[i].ColorId" />
                            <input type="hidden" name="Translations[@i].Language" value="@Model.Translations[i].Language" />

                            <div class="form-group">
                                <label for="Translations[@i].Name">Name</label>
                                <input type="text" class="form-control" name="Translations[@i].Name" value="@Model.Translations[i].Name" placeholder="Enter name">
                            </div>
                            <hr />
                        </div>
                    }
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Update Color</button>
                    <a href="@Url.Action("Table", "Color", new { pageIndex = Model.PageIndex })" class="btn btn-warning">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
