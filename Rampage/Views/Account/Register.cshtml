@model RegisterDTO

<head>
    <link rel="stylesheet" href="~/assets/css/register.css">
</head>

<section class="bg-image-register">
</section>
<section class="register">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }
    <form method="post">
        <div class="register-all">
            <div class="register-name">
                <input type="text" asp-for="FirstName" placeholder="Adınız" required>
            </div>
            <div class="register-name">
                <input type="text" asp-for="LastName" placeholder="Soyadınız" required>
            </div>
            <div class="register-email">
                <input type="email" asp-for="Email" placeholder="E-posta Adresiniz" required>
            </div>
        </div>
        <div class="password-all">
            <div class="register-password">
                <input type="password" asp-for="Password" placeholder="Şifre" required>
            </div>
            <div class="register-password">
                <input type="password" asp-for="ConfirmPassword" placeholder="Şifreyi Tekrar Giriniz" required>
            </div>
        </div>
        <div class="gizlilik">
            <p>
                Kişisel verileriniz, <a href="#">Aydınlatma Metni</a> kapsamında işlenmektedir. 'Gönder'
                butonuna basarak
                <a href="#">Gizlilik ve Çerez Politikası</a>'nı okuduğunuzu ve kabul ettiğinizi
                onaylıyorsunuz.
            </p>
        </div>
        <div class="send-message-contact">
            <button type="submit">
                <i class="fa-solid fa-user"></i>
                Üye Ol
            </button>
        </div>
    </form>
</section>
<script src="~/assets/js/register.js"></script>
