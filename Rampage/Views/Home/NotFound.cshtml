@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Error</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            outline: none;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: -webkit-repeating-linear-gradient(-45deg, #ff0000, #990000, #660000, #330000, #660000, #990000, #ff0000);
            height: 100vh;
            background-size: 400%;
        }

        .error-page {
            position: absolute;
            top: 5%;
            left: 17%;
            right: 17%;
            bottom: 5%;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 15px;
            background: black;
            box-shadow: 5px 10px 10px rgba(0,0,0,0.1);
            animation: up 2s infinite ease;
        }

            .error-page .content {
                max-width: 600px;
                text-align: center;
            }

        .content h1 {
            font-size: 10vw;
            line-height: 1em;
            position: relative;
        }

            .content h1:after {
                position: absolute;
                content: attr(data-text);
                top: 0;
                left: 0;
                right: 0;
                background: -webkit-repeating-linear-gradient(-45deg, #ff0000, #990000, #660000, #330000, #660000, #990000, #ff0000);
                background-size: 400%;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                text-shadow: 1px 1px 2px rgba(255,255,255,0.25);
                animation: animate 10s ease-in-out infinite;
            }

        @@keyframes animate {
            0% {
                background-position: 0 0;
            }

            25% {
                background-position: 100% 0;
            }

            50% {
                background-position: 100% 100%;
            }

            75% {
                background-position: 0 100%;
            }

            100% {
                background-position: 0 0;
            }
        }

        @@keyframes up {
            25% {
                transform: translateX(-25px)
            }

            50% {
                transform: translateX(0px)
            }

            75% {
                transform: translateX(25px)
            }
        }

        .content h4 {
            margin-bottom: 20px;
            text-transform: uppercase;
            color: #000;
            max-width: 600px;
            font-size: 2em;
            position: relative;
        }

            .content h4:after {
                position: absolute;
                content: attr(data-text);
                top: 0;
                left: 0;
                right: 0;
                text-shadow: 1px 1px 2px ghostwhite;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .content p {
            font-size: 1.2em;
            color: ghostwhite;
        }

        .content .btns {
            margin: 25px 0;
            display: inline-flex;
        }

            .content .btns a {
                display: inline-block;
                margin: 0 10px;
                text-decoration: none;
                border: 2px solid #ff0000;
                color: #ff0000;
                font-weight: 500;
                padding: 10px 25px;
                border-radius: 25px;
                text-transform: uppercase;
                transition: all 0.3s ease;
            }

                .content .btns a:hover {
                    background: #ff0000;
                    color: #000;
                }

    </style>
</head>
<body>
    <div class="error-page">
        <div class="content">
            <h1 data-text="404">404</h1>
            <h4 data-text="Opps! Page not found">Opps! Page not found</h4>
            <p>Sorry, the page you're looking for doesn't exist. If you think something is broken, report a problem.</p>
            <div class="btns">
                <a onclick="goBack()">Go Back</a>
            </div>
        </div>
    </div>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
</body>
</html>
